{
  "name": "confrontos-server",
  "version": "1.0.0",
  "main": "src",
  "private": true,
  "engines" : { 
    "node" : "^6.11.5",
    "npm" : "~3.10.10"
  },
  "scripts": {
    "start": "node .",
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "dev": "IP=0.0.0.0 nodemon --debug -i \"*.test.js\" .",
    "prod": "cross-env NODE_ENV=production nodemon -i \"*.test.js\" -r dotenv-safe/config .",
    "lint": "eslint src",
    "docs": "apidoc -i src -o docs && apidoc-markdown -p docs -o DOCS.md",
    "prepare:postdocs": "opn docs/index.html",
    "prepare:mincer": "mincer -I src/assets/javascripts -I src/assets/stylesheets -o public/assets"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.js",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ]
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "apidoc-markdown": "^0.2.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "cross-env": "^5.0.5",
    "dotenv-safe": "^4.0.3",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "23.6.0",
    "jest-preset-coffeescript": "^1.0.0",
    "mongodb-memory-server": "2.1.0",
    "nock": "^9.0.2",
    "nodemon": "^1.10.2",
    "opn-cli": "^3.1.0",
    "sinon": "^4.0.1",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "@chan4lk/acronym": "^1.0.1",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bodymen": "^1.0.3",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "ejs": "^2.6.1",
    "express": "^4.16.2",
    "fcm": "^1.0.3",
    "fcm-push": "^1.1.3",
    "jsonwebtoken": "^8.1.0",
    "lodash": "4.17.11",
    "mincer": "^1.5.1",
    "moment": "^2.22.2",
    "mongoose": "^5.1.0",
    "mongoose-create-unique": "^0.4.4",
    "mongoose-keywords": "^0.4.0",
    "mongoose-sequence": "^4.0.1",
    "morgan": "^1.7.0",
    "nodemailer": "^4.6.8",
    "papercut": "^0.0.6",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^3.0.0",
    "querymen": "^2.1.3",
    "rand-token": "^0.4.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sendgrid": "^4.0.2",
    "slug": "^0.9.1",
    "socket.io": "^2.1.1",
    "winston": "2.3.1"
  }
}
